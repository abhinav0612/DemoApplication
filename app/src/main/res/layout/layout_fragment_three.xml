<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="50dp"
       android:textStyle="bold"
       android:textSize="30dp"
       android:text="Wallet"
       android:id="@+id/textView"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Current coins :"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_below="@id/textView"
        android:id="@+id/textViewCoins"
        />
    <TextView
        android:layout_width="300dp"
        android:id="@+id/walletCoins"
        android:gravity="center"
        android:text=""
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Wallet is updated within few seconds.You can refresh the wallet  instantly by pressing the below button."
        android:layout_marginBottom="20dp"
        android:layout_above="@id/button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Refresh"
        android:text="Refresh Wallet"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:id="@+id/button"/>

</RelativeLayout>